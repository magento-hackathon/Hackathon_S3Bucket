<config>
    <sections>
        <system>
            <groups>
                <s3bucket>

                    <label>AWS S3</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>950</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>

                    <fields>

                        <aws_region translate="label">
                            <label>AWS Region</label>
                            <frontend_type>select</frontend_type>
                            <source_model>hackathon_s3bucket/system_config_source_region</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>10</sort_order>
                        </aws_region>

                        <aws_access_key translate="label">
                            <label>AWS Access Key</label>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>20</sort_order>
                        </aws_access_key>

                        <aws_secret_key translate="label">
                            <label>AWS Secret Key</label>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>30</sort_order>
                        </aws_secret_key>

                        <aws_s3_bucketname translate="label">
                            <label>AWS Bucket Name</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>40</sort_order>
                        </aws_s3_bucketname>

                        <aws_s3_browser_caching_time translate="label">
                            <label>Browser Caching Time</label>
                            <frontend_type>text</frontend_type>
                            <comment>Time to cache the image in the browser. Leave blank to use etag/last-modified.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>30</sort_order>
                        </aws_s3_browser_caching_time>

                        <aws_s3_image_dimensions translate="label">
                            <label>Image Dimensions</label>
                            <frontend_type>text</frontend_type>
                            <comment>asdfasdf</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>30</sort_order>
                        </aws_s3_image_dimensions>

                        <customer_groups>
                            <label>Keep your media files on the local system</label>
                            <frontend_type>select</frontend_type>
                            <comment>Should there be a copy of your media files on the host system?</comment>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </customer_groups>

                    </fields>
                </s3bucket>
            </groups>
        </system>
    </sections>
</config>
